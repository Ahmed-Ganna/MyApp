<com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_layout"
    tools:context="com.ganna.faceparse.ui.joke.JokeScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_joke"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:textAppearance="?android:textAppearanceLarge"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/img"
            android:src="@drawable/loader"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/txt_joke"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indicator"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="indicator"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like"
            android:id="@+id/btn_like"
            android:layout_below="@+id/img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likes_tv"
            android:text="0"
            android:layout_toRightOf="@+id/btn_like"
            android:layout_below="@+id/img"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dislike"
            android:layout_below="@+id/btn_like"
            android:id="@+id/btn_dislike"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dislikes_tv"
            android:layout_below="@+id/btn_like"
            android:text="0"
            android:layout_toRightOf="@+id/btn_dislike"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share"
            android:layout_below="@+id/btn_dislike"
            android:id="@+id/shareFb"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_btn"
            android:text="save"
            android:layout_below="@+id/btn_dislike"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="favourite"
            android:id="@+id/favBtn"
            android:layout_above="@+id/save_btn"
            android:layout_toRightOf="@+id/save_btn"
            android:layout_toEndOf="@+id/save_btn" />

    </RelativeLayout>
    </ScrollView>


</com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
